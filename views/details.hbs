<section id="deatils-page">
    <div class="wrapper">
        <div class="product-img">
            <img src="{{imageUrl}}">
        </div>
        <div class="product-info">
            <div class="product-text">
                <div class="product-text">
                    <h1>Name: {{name}}</h1>
                    <h2>Type: {{type}}</h2>
                    <h4>Year: {{year}}</h4>
                    <h4>City: {{city}}</h4>
                    <p>Description: {{description}}</p>

                    {{#if renters}}
                    <p>People rented this housing: {{rentersNames}}</p>
                    {{else}}
                    <p>People rented this housing: There are no tenants yet.</p>
                    {{/if}}
                </div>
            </div>

            {{#if username}}
            <div class="product-btn">
                {{#if isOwner}}
                <a href="/housing/{{_id}}/edit" class="edit">Edit</a>
                <a href="/housing/{{_id}}/delete" class="remove">Delete</a>
                {{else}}
                    {{#if hasAvailable}}
                        {{#if hasRented}}
                        <p class="alRentHome">You have already rent this home</p>
                        {{else}}
                        <a href="/housing/{{_id}}/rent" class="rentHome">Rent a home, available {{available}} housing</a>
                        {{/if}}
                    {{else}}
                    <p class="no-housing">No Housing Available!</p>
                    {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </div>
</section>